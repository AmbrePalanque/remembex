body {
  background: #f5ecec;
  font-family:Roboto;
}

.mouseZone {
  z-index: 1000;
  position: relative;
}

.mouseZone div {
  height: 50vh;
}

.fond {
  position: relative;
  max-height: 98vh;
  height: 98vh;
  z-index: 0;
  overflow: hidden;
}

.photo {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: 3;

  transition: 1s ;
  transform: translateX(0) translateY(0) translateZ(0);
  -webkit-transform: translateX(0) translateY(0) translateZ(0);
  -moz-transform: translateX(0) translateY(0) translateZ(0);
  -o-transform: translateX(0) translateY(0) translateZ(0);
  -ms-transform: translateX(0) translateY(0) translateZ(0);
}

.photo.decal {
  transform: translateX(0) translateY(20px) translateZ(0);
  -webkit-transform: translateX(0) translateY(20px) translateZ(0);
  -moz-transform: translateX(0) translateY(20px) translateZ(0);
  -o-transform: translateX(0) translateY(20px) translateZ(0);
  -ms-transform: translateX(0) translateY(20px) translateZ(0);
}




